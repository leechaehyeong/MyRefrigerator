<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/menuRecommendTxt"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="menuRecommendTxt" />

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="50px"
        android:text="titleTxt" />

    <ImageView
        android:id="@+id/refrigeratorTopImg"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:layout_marginTop="40px"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/refrigeratorBottomImg"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_marginBottom="50px"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/recipeBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:backgroundTint="#80C0DD"
            android:text="레시피 1" />

        <Button
            android:id="@+id/recipeBtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:backgroundTint="#80C0DD"
            android:text="레시피 2" />
    </LinearLayout>
</LinearLayout>